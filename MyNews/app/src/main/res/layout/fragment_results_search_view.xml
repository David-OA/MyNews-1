<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/result_view_frame_layout">

<android.support.design.widget.CoordinatorLayout
    android:id="@+id/result_search_view_root_view"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/result_search_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.library21.custom.SwipeRefreshLayoutBottom
                android:id="@+id/result_search_swipe_refresh_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/result_search_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.library21.custom.SwipeRefreshLayoutBottom>
        </android.support.v4.widget.SwipeRefreshLayout>

</android.support.design.widget.CoordinatorLayout>
</FrameLayout>
